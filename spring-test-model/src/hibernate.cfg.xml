<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/springtest?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">turuu</property>
    <mapping class="mn.turuu.springtest.model.UserRole"/>
    <mapping class="mn.turuu.springtest.model.User"/>
    <mapping class="mn.turuu.springtest.model.Product"/>
    <mapping class="mn.turuu.springtest.model.UserRoleId"/>
    <mapping class="mn.turuu.springtest.model.Basket"/>
  </session-factory>
</hibernate-configuration>
